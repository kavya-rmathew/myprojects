public class MyClass{
    
    public static Object spoon = new Object();
    public static Object bowl = new Object();
    
    public static void main(String args[]){
        
        Thread cook1 = new Thread(() -> {
            synchronized (spoon){
                System.out.println("Holding the spoon");
                System.out.println("Waiting for bowl");
            }
             synchronized (bowl){
                System.out.println("Holding the spoon and bowl");
             
            }
        });
        
        Thread cook2 = new Thread(() -> {
            synchronized (spoon){
                System.out.println("holding the bowl");
                System.out.println("waiting for spoon");
            }
             synchronized (bowl){
                System.out.println("Holding the spoon and bowl");
                }
            
        });
        cook1.start();
        cook2.start();
    }
}
